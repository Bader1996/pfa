<!DOCTYPE html>




<head>
    <meta charset="UTF-8">
    <title>employees-list</title>
    {% embed "@PfaProject/layout/stylish.html.twig" %}
    {% endembed %}
</head>

<body>

{% embed "@PfaProject/layout/adminnavbar.html.twig" %}
{% endembed %}
<br><br><br><br><br>

<div class='container container-fluid'>

    <!--   		<div align = 'center'><h4 th:text = "number of records : ${size}" ></h4></div> -->

    <br><br>


    {% if department is empty %}
    <h2>No Records yet!</h2>
    {% else %}

    <div th:case="*">
        <h2 th:text = '${size}' ></h2>  <br>
        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th>DÃ©partement</th>
                <th class='text-warning'><i>=>Edit</i></th>
                <th class='text-warning'>=>Delete</th>
            </tr>
            </thead>
            <tbody>
            {% for d in department  %}
                <tr>
                    <td> {{ d.departmentName }}</td>
                    <td><a class='btn btn btn-outline-success' href = ' {{ path('departments-edit', {'id': d.departmentId }) }}'>Edit</a></td>
                    <td><a class='btn btn btn-outline-danger' href = ' {{ path('departments-delete', {'id': d.departmentId }) }}' onClick="if (!(confirm('Are you sure you want to delete this location ?'))) return false" > Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
    </div>
    <h4><a href = ' {{ path('departments-add') }}'>Add a new Department</a></h4>
</div>

    </div>
{% endif %}
<br><br><br><br><br>

</body>
