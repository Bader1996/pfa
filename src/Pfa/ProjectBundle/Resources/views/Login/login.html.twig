{%  extends"@PfaProject/layout/employeeNavbar.html.twig" %}
{% block title %}Pfa:ProjectBundle:Login:Login{% endblock %}
{% block body %}
    {%  embed "@PfaProject/layout/stylish.html.twig" %}
    {% endembed %}
    {%  embed "base.html.twig" %}
    {% endembed %}
<div class="panel panel-success">
    <div class="panel-heading">
        <h2>Welcome teams</h2>
    </div>
    <div class="panel-body">
        <form action="{{ path('homepageauth') }}" method="post">

            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" name="username"  id="username" class="form-control" >
            </div>
            <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password"  id="password" class="form-control">
            </div>

            <button type="submit" name="login" class="btn btn-info pull-right">Connect</button>
        </form>
    </div>
{% endblock %}